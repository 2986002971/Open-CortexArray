{
  "tasks": {
    "dev": "deno run --allow-all npm:vite",
    "build": "deno run --allow-all npm:vue-tsc --noEmit && deno run --allow-all npm:vite build",
    "preview": "deno run --allow-all npm:vite preview",
    "tauri": "deno run --allow-all npm:@tauri-apps/cli tauri"
  },
  "imports": {
    "vue": "npm:vue@^3.5.13",
    "@tauri-apps/api": "npm:@tauri-apps/api@^2",
    "@tauri-apps/plugin-opener": "npm:@tauri-apps/plugin-opener@^2",
    "element-plus": "npm:element-plus@^2.10.2"
  },
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"]
  }
}
